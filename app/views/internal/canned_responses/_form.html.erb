<%= form_for [:internal, canned_response] do |f| %>
  <%= f.label :type_of, "Type of Canned Response (Mod Comment, Personal Comment, Email, etc)" %>
  <br>
  <% type_of_options = [["Mod Comment", "mod_comment"], ["Personal Comment", "personal_comment"], ["Email", "email"], ["Abuse Report Email", "abuse_report_email"]] %>
  <%= f.select :type_of, options_for_select(type_of_options, canned_response.type_of), html: { required: true } %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title, value: canned_response.title %>
  <br>
  <%= f.label :content, "Canned response body" %>
  <br>
  <%= f.text_area :content %>
  <br>
  <%= f.label :content_type, "Content Type (markdown, plain text, HTML, etc)", value: canned_response.content %>
  <br>
  <% content_type_options = [["Markdown", "body_markdown"], ["Plain Text", "plain_text"], ["HTML", "html"]] %>
  <%= f.select :content_type, options_for_select(content_type_options, canned_response.content_type || "plain_text") %>
  <br>
  <%= f.label :user_id, "User ID - Leave blank to allow more than one user to use" %>
  <br>
  <%= f.text_field :user_id, value: canned_response.user_id %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
